{
  "name": "bundle-template",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "run-s validate build:prod build:custom-properties build:html build:panel-options",
    "build:custom-properties": "node --experimental-json-modules ./scripts/customProperties.js",
    "build:dev": "rollup -c rollup.config.dev.js",
    "build:html": "node ./scripts/html.js",
    "build:prod": "rollup -c rollup.config.prod.js ",
    "build:panel-options": "node ./scripts/panelOptions.js",
    "dev": "run-p watch serve:dev",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "eslint . --ext .ts,.js,.cjs --fix",
    "fix:prettier": "prettier --write .",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint . --ext .ts,.js,.cjs",
    "lint:prettier": "prettier --check .",
    "serve": "sirv public --single --host",
    "serve:dev": "sirv public --single --host --dev",
    "typecheck": "tsc --noEmit",
    "validate": "run-s typecheck lint",
    "watch": "rollup -c rollup.config.dev.js -w"
  },
  "devDependencies": {
    "@grafana/data": "^8.1.5",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.7",
    "prettier": "^2.4.1",
    "rollup": "^2.57.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sirv-cli": "^1.0.14",
    "typescript": "^4.4.3"
  }
}
