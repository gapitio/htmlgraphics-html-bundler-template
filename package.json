{
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "run-s validate build:prod build:custom-properties build:html build:panel-options",
    "build:custom-properties": "node --experimental-json-modules ./scripts/customProperties.js",
    "build:dev": "rollup -c rollup.config.dev.js",
    "build:html": "node ./scripts/html.js",
    "build:prod": "rollup -c rollup.config.prod.js ",
    "build:panel-options": "node ./scripts/panelOptions.js",
    "dev": "run-p watch serve:dev",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "eslint . --ext .ts,.js,.cjs --fix",
    "fix:prettier": "prettier --write .",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint . --ext .ts,.js,.cjs",
    "lint:prettier": "prettier --check .",
    "serve": "sirv public --single --host",
    "serve:dev": "sirv public --single --host --dev",
    "typecheck": "tsc --noEmit",
    "validate": "run-s typecheck lint",
    "watch": "rollup -c rollup.config.dev.js -w"
  },
  "devDependencies": {
    "@grafana/data": "^8.5.5",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "rollup": "^2.75.6",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "sirv-cli": "^2.0.2",
    "typescript": "^4.7.3"
  }
}
